<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowToPushUpStepOneActivity">

    <TextView
        android:id="@+id/headline_howtopushupstepone"
        android:layout_width="380dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/menubutton_howtopushupstepone"
        app:layout_constraintTop_toTopOf="@+id/menubutton_howtopushupstepone"
        app:layout_constraintBottom_toBottomOf="@+id/menubutton_howtopushupstepone"
        android:layout_marginLeft="10dp"
        android:text="Schritt 1: Ausgangsposition"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <ImageButton
        android:id="@+id/menubutton_howtopushupstepone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_menu"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="menuicon" />

    <TextView
        android:id="@+id/declaration_howtopushupstepone"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/headline_howtopushupstepone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Die Beine sind durchgestreckt und zusammen. Die H채nde befinden sich parallel unter den Schultern. Die Arme sind ebenfalls durchgestreckt. Der Bauch ist angespannt und der R체cken gerade. Der Po ist ebenfalls angespannt." />

    <!--pushup.jpg wurde unter https://www.fitundattraktiv.de/liegestuetze-muskelaufbau-5-uebungen/ heruntergeladen -->

    <ImageView
        android:id="@+id/pushupimg_howtopushupstepone"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/declaration_howtopushupstepone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/pushup"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/buttonNext_howtopushupstepone"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="N채chster Schritt "
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#0ED6B9"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@+id/declaration_howtopushupstepone"
        app:layout_constraintTop_toBottomOf="@+id/pushupimg_howtopushupstepone"
        />
    <Button
        android:id="@+id/buttonPrev_howtopushupstepone"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Zur체ck "
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/declaration_howtopushupstepone"
        app:layout_constraintTop_toBottomOf="@+id/pushupimg_howtopushupstepone"
        android:backgroundTint="#0ED6B9"
        />


</androidx.constraintlayout.widget.ConstraintLayout>