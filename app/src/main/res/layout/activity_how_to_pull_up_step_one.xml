<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowToPushUpStepOneActivity">

    <TextView
        android:id="@+id/headline_howtopullupstepone"
        android:layout_width="380dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/menubutton_howtopullupstepone"
        app:layout_constraintTop_toTopOf="@+id/menubutton_howtopullupstepone"
        app:layout_constraintBottom_toBottomOf="@+id/menubutton_howtopullupstepone"
        android:text="Schritt 1: Ausgangsposition"
        android:layout_marginLeft="10dp"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <ImageButton
        android:id="@+id/menubutton_howtopullupstepone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_menu"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="menuicon" />
    <TextView
        android:id="@+id/declaration_howtopullupstepone"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/headline_howtopullupstepone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Umfasse die Klimmzugstange, mit den Händen nach vorne zeigend, etwas mehr als Schulterbreit. Die Arme sind durgestreckt und der Oberkörper angespannt. Die Beine werden nach Hinten hinweg angewinkelt." />

    <ImageView
        android:id="@+id/pushupimg_howtopullupstepone"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/declaration_howtopullupstepone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/pullup"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/buttonNext_howtopullupstepone"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Nächster Schritt "
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0ED6B9"
        app:layout_constraintRight_toRightOf="@+id/declaration_howtopullupstepone"
        app:layout_constraintTop_toBottomOf="@+id/pushupimg_howtopullupstepone"
        />
    <Button
        android:id="@+id/buttonPrev_howtopullupstepone"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Zurück "
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/declaration_howtopullupstepone"
        app:layout_constraintTop_toBottomOf="@+id/pushupimg_howtopullupstepone"
        android:backgroundTint="#0ED6B9"
        />


</androidx.constraintlayout.widget.ConstraintLayout>