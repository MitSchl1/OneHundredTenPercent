<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplainExerciseBenchPressStepTwoActivity">


    <TextView
        android:id="@+id/titleBenchPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How To Benchpress"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/titleStepOneBenchPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schritt 2:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintLeft_toLeftOf="@id/textStepOneBenchPress"
        app:layout_constraintTop_toBottomOf="@id/titleBenchPress"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/textStepOneBenchPress"
        android:fontFamily="sans-serif"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleStepOneBenchPress"
        />
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textStepOneBenchPress"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:id="@+id/stepOneImageOne"
            android:src="@drawable/common_google_signin_btn_text_dark_normal_background"
            android:contentDescription="TODO" />
        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:id="@+id/stepOneImageTwo"
            android:src="@drawable/common_google_signin_btn_text_dark_normal_background"
            android:contentDescription="TODO" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Nächster Schritt "
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/textStepOneBenchPress"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:backgroundTint="#0ED6B9"
        />
    <Button
        android:id="@+id/buttonPrev"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Zurück "
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textStepOneBenchPress"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:backgroundTint="#0ED6B9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>