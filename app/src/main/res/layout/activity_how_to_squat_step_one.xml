<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowToPushUpStepOneActivity">

    <TextView
        android:id="@+id/headline_howtosquatstepone"
        android:layout_width="380dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Schritt 1: Ausgangsposition"
        android:textSize="26sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/declaration_howtosquatstepone"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/headline_howtosquatstepone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Die Beine werden Schulterbreit aufgestellt und die Füße liegen komplett auf dem Boden auf. Die Arme zeigen nach vorne." />

    <ImageView
        android:id="@+id/pushupimg_howtosquatstepone"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/declaration_howtosquatstepone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/squat"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/buttonNext_howtosquatstepone"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Nächster Schritt "
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        android:backgroundTint="#0ED6B9"
        app:layout_constraintRight_toRightOf="@+id/declaration_howtosquatstepone"
        app:layout_constraintTop_toBottomOf="@+id/pushupimg_howtosquatstepone"
        />
    <Button
        android:id="@+id/buttonPrev_howtosquatstepone"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Zurück "
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        app:layout_constraintLeft_toLeftOf="@+id/declaration_howtosquatstepone"
        app:layout_constraintTop_toBottomOf="@+id/pushupimg_howtosquatstepone"
        android:backgroundTint="#0ED6B9"
        />


</androidx.constraintlayout.widget.ConstraintLayout>