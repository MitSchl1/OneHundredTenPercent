<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivty">

    <Button
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/emailAdressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Addresse: "
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/signout"
        app:layout_constraintRight_toLeftOf="@id/signout"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/emailAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/emailAdressTitle"
        app:layout_constraintLeft_toRightOf="@id/emailAdressTitle"
        />
    <TextView
        android:id="@+id/nameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/emailAdressTitle"
        app:layout_constraintRight_toLeftOf="@id/signout"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/nameTitle"
        app:layout_constraintLeft_toRightOf="@id/nameTitle"
        />
    <Button
        android:id="@+id/editProfile"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:text="Edit"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/nameTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passwort Ã¤ndern"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/editProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>